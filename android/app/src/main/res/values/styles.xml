<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:datePickerDialogTheme">@style/MyDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/MyDialogTheme</item>
        <item name="colorPrimary">#DE2629</item>
        <item name="android:textColorPrimary">#DE2629</item>
        <item name="android:textColor">#DE2629</item>
        <item name="colorAccent">#DE2629</item>
        <!-- <item name="android:windowBackground">#FFFFFF</item> -->
    </style>
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">#DE2629</item>
        <item name="android:textColorPrimary">#DE2629</item>
        <item name="colorAccent">#DE2629</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

</resources>
